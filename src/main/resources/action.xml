	<bean id="loginCheckAction" class="com.randioo.randioo_chat_server.module.login.action.LoginCheckAction" p:loginService-ref="loginService"></bean>
	<bean id="loginCreateRoleAction" class="com.randioo.randioo_chat_server.module.login.action.LoginCreateRoleAction" p:loginService-ref="loginService"></bean>
	<bean id="loginGetRoleDataAction" class="com.randioo.randioo_chat_server.module.login.action.LoginGetRoleDataAction" p:loginService-ref="loginService"></bean>

	<bean id="pingAction" class="com.randioo.randioo_chat_server.module.ping.action.PingAction" p:pingService-ref="pingService"></bean>
	
	<bean id="chatEnterChatRoomAction" class="com.randioo.randioo_chat_server.module.chat.action.ChatEnterChatRoomAction" p:chatService-ref="chatService"></bean>
	<bean id="chatExitChatRoomAction" class="com.randioo.randioo_chat_server.module.chat.action.ChatExitChatRoomAction" p:chatService-ref="chatService"></bean>
	<bean id="chatSendChatAction" class="com.randioo.randioo_chat_server.module.chat.action.ChatSendChatAction" p:chatService-ref="chatService"></bean>
